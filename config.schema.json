{
  "pluginAlias": "SternetSmartHomebridgeLan",
  "pluginType": "platform",
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name",
        "default": "SternetSmart",
        "required": true
      },
      "devices": {
        "type": "array",
        "orderable": false,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "default": ""
            },
            "device_type": {
              "title": "Type",
              "type": "string",
              "required": true,
              "default": "",
              "oneOf": [
                { "title": "CCT Downlighter", "enum": ["cct_downlighter"] }
              ]
            },
            "ip": {
              "title": "IP Address",
              "type": "string",
              "required": true,
              "default": ""
            },
            "restoreState": {
              "title": "Restore Last State",
              "type": "boolean",
              "description": "Send cached/last known state to device whenever it reconnects",
              "default": false,
              "required": false
            }
          }
        }
      }
    }
  }
}